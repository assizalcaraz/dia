#!/usr/bin/env python3
"""
Helper para commits manuales sin emoji ðŸ¦¾.
Uso: git -M "mensaje" o ./git-M "mensaje"
"""
import sys
import subprocess

if len(sys.argv) < 2:
    print("Uso: git -M 'mensaje del commit'", file=sys.stderr)
    print("O: ./git-M 'mensaje del commit'", file=sys.stderr)
    sys.exit(1)

message = sys.argv[1]
result = subprocess.run(["git", "commit", "-m", message], check=False)
sys.exit(result.returncode)
