{
  "rules": [
    {
      "id": "root_only_readme",
      "description": "En ra√≠z solo README.md como .md",
      "pattern": "*.md",
      "exclude": ["README.md"],
      "scope": "root",
      "event_type": "UnexpectedFileInRootDetected"
    },
    {
      "id": "suspicious_md_outside_docs",
      "description": ".md fuera de docs/ es sospechoso",
      "pattern": "*.md",
      "exclude": ["README.md", "docs/**"],
      "event_type": "SuspiciousFileDetected"
    },
    {
      "id": "docs_touched_alert",
      "description": "Cambios en docs/ generan alerta",
      "pattern": "docs/**",
      "event_type": "DocsTouched",
      "severity": "info"
    }
  ]
}
